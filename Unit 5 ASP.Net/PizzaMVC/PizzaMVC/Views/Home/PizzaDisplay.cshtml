@{
}

@foreach(Pizza p in Model.OrderByDescending(i => i.Popularity).ToList())
            {
                @if(p.Popularity>= 5)
                {
                    <div>
                    <p>@p.Name</p>
                    <p>@p.Popularity</p>
                </div>  
                }
            }