<form method="post" asp-action="Results">
    <label for="FirstName">Please enter a first name</label>
    <input type="text" name="First" id="FirstName" required />
    <br />

    <label for="LastName">Please enter a last name</label>
    <input type="text" name="Last" id="LastName" required />
    <br />

    <label for="Email">Please enter an email</label>
    <input type="email" name="Email" id="Email" required />
    <br />

    <label for="Password">Please enter a password</label>
    <input type="password" name="Password" id="Password" minlength="5" required />
    <br />

    <input type="submit" />
</form>